<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/DiaStoreButton</item>
        <item name="textInputStyle">@style/StyledTilEditTextTheme</item>
    </style>

    <!--region Headlines-->
    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1" />

    <style name="Headline1.Bold" parent="Headline1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2" />
    <style name="Headline2.Bold" parent="Headline2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3" />
    <style name="Headline3.Bold" parent="Headline3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4" />
    <style name="Headline4.Bold" parent="Headline4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5" />
    <style name="Headline5.Bold" parent="Headline5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6" />
    <style name="Headline6.Bold" parent="Headline6">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Subtitle-->
    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />
    <style name="Subtitle1.Bold" parent="Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />
    <style name="Subtitle2.Bold" parent="Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Caption-->
    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption" />
    <style name="Caption.Bold" parent="Caption">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Body-->
    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1"/>
    <style name="Body1.Bold" parent="Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2"/>
    <style name="Body2.Bold" parent="Body2">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Widgets-->
    <style name="DiaStoreButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">320dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">320dp</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>
    <!--endregion-->
</resources>
